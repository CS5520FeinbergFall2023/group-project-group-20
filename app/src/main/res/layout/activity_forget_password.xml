<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.ForgetPasswordActivity"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your registerd email to receive password rest link"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:id="@+id/textView_resetPassword_rest_head"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_for_password_rest_email"
            android:layout_below="@+id/textView_resetPassword_rest_head"
            android:text="@string/prompt_email"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="#555555"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_for_password_rest_email"
            android:id="@+id/edit_text_for_rest_email"
            android:hint="@string/enter_your_register_email"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="20sp"
            android:background="@color/white"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rest Password"
            android:id="@+id/button_password_reset"
            android:layout_below="@+id/edit_text_for_rest_email"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            />

    </RelativeLayout>
</ScrollView>